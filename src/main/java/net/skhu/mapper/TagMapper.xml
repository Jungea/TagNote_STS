<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
             "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.skhu.mapper.TagMapper">

	<select id="findOne" resultType="Tag">
		SELECT * FROM Tag WHERE
		tag_num =
		#{tagNum}
	</select>

	<select id="findByUserNum" resultType="Tag">
		SELECT * FROM Tag
		WHERE
		user_num = #{userNum}
	</select>

	<select id="findByTagNum" resultType="Tag">
		SELECT * FROM Tag
		WHERE
		memo_num = #{memoNum}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="tagNum">
		INSERT
		Tag (user_num, tag_name)
		VALUES
		(#{userNum}, #{tagName})
	</insert>

	<update id="update">
		UPDATE User SET
		user_pass = #{userPass}
		WHERE
		pass_find_qust =
		#{passFindQust} and pass_find_ansr = #{passFindAnsr}
	</update>

	<delete id="delete">
		DELETE FROM User WHERE memo_num = #{memoNum}
	</delete>
</mapper>
